<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/text_selected">

    <item
        android:id="@android:id/mask">

        <shape
            android:shape="rectangle">

            <solid
                android:color="#4e5666" />

            <corners
                android:radius="5dp" />

        </shape>

    </item>

    <item
        android:id="@android:id/background">

        <shape
            android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="#353B45"
                android:startColor="#353B45"
                android:type="linear" />

            <corners
                android:radius="5dp" />

        </shape>

    </item>

</ripple>